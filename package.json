{
  "name": "clickuplink",
  "displayName": "ClickUp Link",
  "description": "VSCode extension for ClickUp integration using React-inspired architecture.",
  "version": "0.0.1",
  "publisher": "your-publisher-name", 
  "author": {
    "name": "ClickUp Link Team"
  },
  "homepage": "https://github.com/your-username/clickuplink",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/clickuplink"
  },
  "extensionDependencies": [],
  "extensionPack": [],
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": ["workspace"],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "browser": "./out/extension.js",  "activationEvents": [
    "onStartupFinished",
    "onUri",
    "onCommand:clickuplink.login",
    "onCommand:clickuplink.enterCode",
    "onCommand:clickuplink.logout",
    "onCommand:clickuplink.status",
    "onCommand:clickuplink.testNavigation",
    "onCommand:clickuplink.navigateProjects",
    "onCommand:clickuplink.navigateFolders",
    "onCommand:clickuplink.navigateLists",
    "onCommand:clickuplink.navigateTasks",
    "onCommand:clickuplink.navigateBack",
    "onCommand:clickuplink.testCache",
    "onCommand:clickuplink.toggleDecorations",
    "onCommand:clickuplink.insertTask",
    "onCommand:clickuplink.browseAndInsert",
    "onCommand:clickuplink.quickInsert",
    "onCommand:clickuplink.openTaskDetails",
    "onCommand:clickuplink.changeTaskStatus",
    "onCommand:clickuplink.showQuickActions",
    "onCommand:clickuplink.refreshDecorations",
    "onCommand:clickuplink.testPhase3",
    "onCommand:clickuplink.testPhase3Scenarios"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clickuplink.login",
        "title": "ClickUp: Start Authentication"
      },
      {
        "command": "clickuplink.enterCode", 
        "title": "ClickUp: Enter Authorization Code"
      },
      {
        "command": "clickuplink.logout",
        "title": "ClickUp: Reset Authentication"
      },      {
        "command": "clickuplink.status",
        "title": "ClickUp: Show Authentication Status"
      },
      {
        "command": "clickuplink.navigateProjects",
        "title": "ClickUp: Navigate Projects"
      },
      {
        "command": "clickuplink.navigateFolders",
        "title": "ClickUp: Navigate Folders"
      },
      {
        "command": "clickuplink.navigateLists",
        "title": "ClickUp: Navigate Lists"
      },
      {
        "command": "clickuplink.navigateTasks",
        "title": "ClickUp: Navigate Tasks"
      },      {
        "command": "clickuplink.navigateBack",
        "title": "ClickUp: Navigate Back"
      },
      {
        "command": "clickuplink.testNavigation",
        "title": "ClickUp: Test Navigation Flow"
      },
      {
        "command": "clickuplink.testCache",
        "title": "ClickUp: Test Cache Functionality"
      },
      {
        "command": "clickuplink.toggleDecorations",
        "title": "ClickUp: Toggle Inline Decorations"
      },
      {
        "command": "clickuplink.insertTask",
        "title": "ClickUp: Insert Task at Cursor"
      },
      {
        "command": "clickuplink.browseAndInsert",
        "title": "ClickUp: Browse and Insert Task"
      },
      {
        "command": "clickuplink.quickInsert",
        "title": "ClickUp: Quick Insert Task"
      },
      {
        "command": "clickuplink.openTaskDetails",
        "title": "ClickUp: Open Task Details"
      },
      {
        "command": "clickuplink.changeTaskStatus",
        "title": "ClickUp: Change Task Status"
      },
      {
        "command": "clickuplink.showQuickActions",
        "title": "ClickUp: Show Quick Actions"
      },
      {
        "command": "clickuplink.refreshDecorations",
        "title": "ClickUp: Refresh Decorations"
      },
      {
        "command": "clickuplink.testPhase3",
        "title": "ClickUp: Test Phase 3 Integration"
      },
      {
        "command": "clickuplink.testPhase3Scenarios",
        "title": "ClickUp: Test Phase 3 Scenarios"
      }
    ],
    "configuration": {
      "title": "ClickUp Link",
      "properties": {
        "clickupLink.workspaceId": {
          "type": "string",
          "default": null,
          "description": "ID of the active ClickUp workspace"
        },
        "clickupLink.theme": {
          "type": "string",
          "enum": ["light", "dark"],
          "default": "light",
          "description": "Theme for ClickUp Link UI elements"
        },
        "clickupLink.notificationsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable notifications"
        },
        "clickupLink.decorations.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline task decorations"
        },
        "clickupLink.decorations.showStatus": {
          "type": "boolean",
          "default": true,
          "description": "Show task status in decorations"
        },
        "clickupLink.decorations.showPriority": {
          "type": "boolean",
          "default": true,
          "description": "Show task priority in decorations"
        },
        "clickupLink.decorations.showAssignees": {
          "type": "boolean",
          "default": true,
          "description": "Show task assignees in decorations"
        },
        "clickupLink.decorations.compactMode": {
          "type": "boolean",
          "default": false,
          "description": "Use compact mode for decorations"
        },
        "clickupLink.decorations.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh decorations"
        },
        "clickupLink.decorations.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Decoration refresh interval in milliseconds"
        },
        "clickupLink.insertion.insertFormat": {
          "type": "string",
          "enum": ["reference", "link", "mention"],
          "default": "reference",
          "description": "Default format for task insertion"
        },
        "clickupLink.insertion.includeStatus": {
          "type": "boolean",
          "default": true,
          "description": "Include task status when inserting"
        },
        "clickupLink.insertion.includePriority": {
          "type": "boolean",
          "default": false,
          "description": "Include task priority when inserting"
        },
        "clickupLink.insertion.replaceSelection": {
          "type": "boolean",
          "default": false,
          "description": "Replace selected text when inserting tasks"
        },
        "clickupLink.triggers.enableClickupTrigger": {
          "type": "boolean",
          "default": true,
          "description": "Enable 'clickup' keyword trigger detection"
        },
        "clickupLink.triggers.enableTaskReferences": {
          "type": "boolean",
          "default": true,
          "description": "Enable 'clickup:ID' task reference detection"
        },
        "clickupLink.triggers.enableTaskIds": {
          "type": "boolean",
          "default": true,
          "description": "Enable direct task ID detection (CU-123, #123)"
        },
        "clickupLink.triggers.customTriggers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Custom trigger words for task detection"
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",    "typescript": "^4.7.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "html-webpack-plugin": "^5.5.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run compile:webviews",
    "compile:webviews": "webpack --config webpack.webviews.config.js --mode production",
    "watch": "tsc -watch -p ./",
    "watch:webviews": "webpack --config webpack.webviews.config.js --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "dev": "npm run compile && npm run watch"
  },
  "dependencies": {
    "axios": "^1.10.0"
  }
}
